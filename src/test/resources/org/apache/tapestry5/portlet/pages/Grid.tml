<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
	xmlns:p="tapestry:parameter">

<body>

	<h1> Grid t:inplace="true" </h1> 
	<p>${detailZoneId}</p>	
    <t:grid source="users" row="user" model="myModel"  t:inplace="true" rowIndex="currentIndex" t:pagerPosition="top" t:rowsPerPage="3">
        <p:actionCell>
        	<t:eventlink t:event="serveDetail" t:zone="prop:detailZoneId" t:context="user.id" >Detail</t:eventlink>
	</p:actionCell>
    </t:grid>
    
   	<t:zone t:id="DetailZone" id="${detailZoneId}" visible="false">
		<div>
			<t:if test="user">
            <t:beandisplay object="user"/>
            <p:else>
                	click on details
           	</p:else>
        	</t:if>
		</div>	
	</t:zone>
    
    <h1> Grid t:inplace="false" </h1> 	
    <p>${detailZoneId}</p>	
    <t:grid source="users" row="user" model="myModel"  rowIndex="currentIndex" t:pagerPosition="bottom" t:rowsPerPage="3">
        <p:actionCell>
        	<t:eventlink t:event="serveDetail" t:zone="prop:detailZoneId" t:context="user.id" >Detail</t:eventlink>
	</p:actionCell>
    </t:grid>
    
</body>    
</html>
